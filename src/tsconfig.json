{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "types": ["node"],
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "front/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "front/**/*.vue",
    "front/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "public",
  ],
}